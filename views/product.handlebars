    <!-- replace with cartCount -->
    <a href="/cart" class="cart-link">Cart ({{this.cartCount}})</a>
  </div>
</header>
<main>
  <section id="product-container">
    <!-- replace with product image and name -->
    <img src="/images/{{this.image}}" alt="{{this.name}}" />

    <!-- replace form action id # with product id -->
      <form method="POST" action="/api/cart?inventoryId={{this.product}}">
        <!-- replace with product name -->
        <h2>{{this.name}}</h2>
        <!-- replace with product description -->
        <p>{{this.description}}</p>
        <!-- replace with product price -->
        <p>${{this.price}}</p>
        <label for="quantity-input">
          Quantity
    <!-- replace max input attribute with quantity -->
          <input
            name="quantity"
            id="quantity-input"
            type="number"
            min="1"
            value="1"
            max={{this.inventoryQuantity}} />
        </label>
        <button>Add to Cart</button>
      </form>
  </section>
  <a href="/" id="returnToStore">Return to Store Page</a>
</main>
<footer>
